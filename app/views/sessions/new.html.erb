<div class="wrapper">

  <!-- SMALL GAME LOGO ON RIGHT -->
  <img src="<%= asset_path("miner_logo.png") %>" id="mini-logo">

  <div class="login">
    <% flash.each do |name, msg| %>
      <%= content_tag :p, msg, class: name %>
    <% end %>

    <%= form_for :session, url: sessions_path do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit 'Log In', id: 'login' %>
    <% end %>
  </div>
</div>
