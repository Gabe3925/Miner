<!-- WELCOME LANDING PAGE -->
<div class="wrapper">

  <audio autoplay="autoplay" loop="loop">
    <source src="<%= asset_path("quiet_cave.mp3") %>" type="audio/mpeg">
    <source src="<%= asset_path("quiet_cave.ogg") %>" type="audio/ogg">
    <embed height="5" width="10" src="<%= asset_path("quiet_cave.mp3") %>">
    Your browser does not support game music.
  </audio>

  <img src="<%= asset_path("miner_logo.png") %>" id="logo">

  <div class="nav_block">
    <% if logged_in? %>
      <div class="log">
        <%= form_for :session, url: logout_path, method: 'delete' do |f| %>
          Logged-In: <%= link_to current_user.name.capitalize, current_user %>
          <%= f.submit "Log out", id: "logout" %>
          <%= link_to "Log Out", logout_path, :method => :delete, id: "logout" %>
        <% end %>
      </div>
    <% else %>
      <div class="log">
        <%= link_to "Log In", login_path %> | <%= link_to "Play!", signup_path %>
      </div>
    <% end %>
  </div>

</div>







