body
{
  background: black;
  color: white;
  font-size: 20px;
  font-family: Arial;
  font-size: 20px;
  font-weight: bold;
  font-style: normal;
  text-decoration: none;
  text-indent: 0;
  text-shadow: 1px 1px 0px #cd8a15;
}

.game-div
{
  margin-left: 100px;
}

.wrapper
{
  background: url(<%= asset_path('rock_face.jpg') %>) #000000 repeat center;
  background-size: repeat;
  border: 0px ;
  border-radius: 300px;
  -moz-box-shadow:inset 0px 0px 60px 30px #000;
  -webkit-box-shadow:inset 0px 0px 60px 30px #000;
  box-shadow:inset 0px 0px 60px 30px #000;
  margin: 5% 20% 5% 20%;
  padding: 15px;
  height: 400px;
  width: 600px;
}


/*FOR HEADQUARTERS...*/
